    ema: email
    pw: password
    GridLayout:
        cols: 1
        size: root.width, root.height
        GridLayout:
            cols: 1
            size_hint: .40, .200
            Label:
                text: "Registration page"
                font_size: 40
        FloatLayout:
            Label:
                id: a
                pos_hint: {"x": -0.1, "top": 0.9}
                size_hint: 0.8, 0.2
                text:"Email: "
            TextInput:
                id: email
                pos_hint: {"x": 0.55, "top": 0.825}
                size_hint: 0.3, 0.05
                font_size: 40
            Label:
                id: b
                pos_hint: {"x": -0.1, "top": 0.6}
                size_hint: 0.8, 0.2
                text:"Password: "
            TextInput:
                id: password
                pos_hint: {"x": 0.55, "top": 0.525}
                size_hint: 0.3, 0.05
                font_size: 40

            Button:
                text: "Submit"
                id: password
                pos_hint: {"x": 0.35, "top": 0.25}
