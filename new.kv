<PostingWindow>
    PostScreen:
        id: setting
        name: 'setting'

<PostingWindow>:
    BoxLayout:
        Button:
            text: 'post here'
            on_release:
                root.manager.current = 'settings'
                root.manager.ids.settings.func_abc(self)

    GridLayout:
        cols: 1
        size: root.width, root.height
        GridLayout:
            text: "here will be what u wanna post"
